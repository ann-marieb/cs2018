<Window x:Class="Assignment5.ArrivalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5"
        mc:Ignorable="d"
        Title="Arrival Window" Height="300" Width="406.742">
    <Grid Margin="0,0,-121.4,0.4">
        <ListView x:Name="Flights" HorizontalAlignment="Left" Height="198" Margin="10,10,0,0" VerticalAlignment="Top" Width="381">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Flight" DisplayMemberBinding="{Binding FlightNumber}" Width="70"/>
                    <GridViewColumn Header="Action" DisplayMemberBinding="{Binding FlightAction}" Width="140"/>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding DateTime}" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
